# Project Configuration Example
# Copy this file to .env.project and customize for your project

# Environment file schema version for compatibility tracking
ENV_SCHEMA_VERSION=1

# ============================================================================
# PROJECT INFORMATION
# ============================================================================

# Project name (used in package.json, build artifacts)
PROJECT_NAME=trainingpeaks-sdk

# Project title (used in GitHub project boards, documentation)
PROJECT_TITLE="TrainingPeaks SDK Development"

# Project description (used in package.json, README)
PROJECT_DESCRIPTION="TypeScript SDK for TrainingPeaks API integration"

# ============================================================================
# AUTHOR INFORMATION  
# ============================================================================

# Author name and email (used in package.json, commit signatures)
AUTHOR_NAME="Pablo Albaladejo"
AUTHOR_EMAIL="pablo@example.com"

# GitHub username (used in CODEOWNERS, mentions)
GITHUB_USERNAME="pablo-albaladejo"

# ============================================================================
# REPOSITORY CONFIGURATION
# ============================================================================

# Repository owner and name (used in URLs, package.json)
REPO_OWNER="pablo-albaladejo"
REPO_NAME="trainingpeaks-sdk"

# ============================================================================
# CI/CD CONFIGURATION
# ============================================================================

# Branch names for semantic release and CI workflows
MAIN_BRANCH="main"
DEVELOP_BRANCH="develop"  
ALPHA_BRANCH="alpha"

# Node.js versions for CI matrix (comma-separated, spaces after commas are allowed and will be trimmed)
NODE_VERSIONS="18.x, 20.x"

# Coverage file path for CI upload
COVERAGE_PATH="./coverage/lcov.info"

# ============================================================================
# GITHUB CONFIGURATION
# ============================================================================

# CODEOWNERS (comma-separated list of GitHub usernames with @ prefix)
CODEOWNERS="@your-handle,@collaborator"

# Dependabot reviewers (comma-separated GitHub usernames)
DEPENDABOT_REVIEWERS="pablo-albaladejo"

# Dependabot assignees (comma-separated GitHub usernames)  
DEPENDABOT_ASSIGNEES="pablo-albaladejo"

# ============================================================================
# COMMIT CONFIGURATION
# ============================================================================

# Allowed commit types (comma-separated)
# Default: feat,fix,docs,style,refactor,test,chore,perf,ci,build,revert
COMMIT_TYPES="feat,fix,docs,style,refactor,test,chore,perf,ci,build,revert"

# ============================================================================
# CUSTOM COLORS (OPTIONAL)
# ============================================================================

# Override default label colors with custom hex colors (without #)
# Format: JSON object with color names as keys - must be properly quoted as a JSON string
# Example: '{"critical":"ff0000","high":"ff8800","medium":"ffcc00","low":"00ff00"}'
# CUSTOM_COLORS='{"priority_high":"ff4444","effort_medium":"ffaa00"}'

# Individual color overrides (hex without #)
# COLOR_CRITICAL="d73a4a"
# COLOR_HIGH="f85149"
# COLOR_MEDIUM="fbca04"
# COLOR_LOW="0e8a16"

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Additional project-specific environment variables can be added here
# These will be available in the configuration generators

# Example: Custom component names for labels
# COMPONENTS="auth,workouts,users,storage,validation"

# Example: Custom release asset naming
# RELEASE_ASSET_PREFIX="my-custom-sdk"