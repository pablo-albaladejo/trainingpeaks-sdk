{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@adapters/*": ["adapters/*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@fixtures/*": ["__fixtures__/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.integ-test.ts",
    "src/__fixtures__/**",
    "src/test.setup.ts",
    "**/*.d.ts",
    "node_modules",
    "dist",
    "dist-cjs"
  ]
}
