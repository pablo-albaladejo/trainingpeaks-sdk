# TrainingPeaks SDK Environment Configuration
# Copy this file to .env and replace placeholder values with your real credentials

# =====================================
# AUTHENTICATION CREDENTIALS (REQUIRED)
# =====================================

# Your TrainingPeaks account credentials for integration testing
# IMPORTANT: Use a test account, not your main account
TRAININGPEAKS_TEST_USERNAME=your-username@example.com
TRAININGPEAKS_TEST_PASSWORD=your-password

# Authentication method: 'web' (recommended) or 'api' (fallback)
TRAININGPEAKS_AUTH_METHOD=web

# =====================================
# TRAININGPEAKS URLS (OPTIONAL)
# =====================================

# Main TrainingPeaks website URL
TRAININGPEAKS_BASE_URL=https://www.trainingpeaks.com

# Login page URL
TRAININGPEAKS_LOGIN_URL=https://home.trainingpeaks.com/login

# App URL (after successful login)
TRAININGPEAKS_APP_URL=https://app.trainingpeaks.com

# API base URL
TRAININGPEAKS_API_BASE_URL=https://tpapi.trainingpeaks.com

# =====================================
# WEB AUTHENTICATION SETTINGS (OPTIONAL)
# =====================================

# Run browser in headless mode (true/false)
# Set to false to see the browser during testing (useful for debugging)
TRAININGPEAKS_WEB_HEADLESS=true

# Browser timeout in milliseconds
TRAININGPEAKS_WEB_TIMEOUT=30000

# Custom browser executable path (leave empty for default)
TRAININGPEAKS_WEB_EXECUTABLE_PATH=

# =====================================
# TEST CONFIGURATION (OPTIONAL)
# =====================================

# Test timeout in milliseconds
TRAININGPEAKS_TEST_TIMEOUT=30000

# Error handling timeout
TRAININGPEAKS_ERROR_TIMEOUT=15000

# =====================================
# DEBUG CONFIGURATION (OPTIONAL)
# =====================================

# Enable debug mode
TRAININGPEAKS_DEBUG=false

# Enable auth debug logging
TRAININGPEAKS_DEBUG_AUTH=false

# Enable network debug logging
TRAININGPEAKS_DEBUG_NETWORK=false

# Enable browser debug logging
TRAININGPEAKS_DEBUG_BROWSER=false

# =====================================
# ADVANCED CONFIGURATION (OPTIONAL)
# =====================================

# General timeout in milliseconds
TRAININGPEAKS_TIMEOUT=30000

# Web authentication timeout
TRAININGPEAKS_WEB_AUTH_TIMEOUT=60000

# API authentication timeout
TRAININGPEAKS_API_AUTH_TIMEOUT=35000

# Element wait timeout
TRAININGPEAKS_ELEMENT_WAIT_TIMEOUT=10000

# Page load timeout
TRAININGPEAKS_PAGE_LOAD_TIMEOUT=30000

# Error detection timeout
TRAININGPEAKS_ERROR_DETECTION_TIMEOUT=5000

# Test execution timeout
TRAININGPEAKS_TEST_EXECUTION_TIMEOUT=120000

# Token refresh window
TRAININGPEAKS_TOKEN_REFRESH_WINDOW=600000

# Token validation window
TRAININGPEAKS_TOKEN_VALIDATION_WINDOW=120000

# Token default expiration
TRAININGPEAKS_TOKEN_DEFAULT_EXPIRATION=3600000

# Browser launch timeout
TRAININGPEAKS_BROWSER_LAUNCH_TIMEOUT=30000

# Browser page wait timeout
TRAININGPEAKS_BROWSER_PAGE_WAIT_TIMEOUT=10000

# Retry attempts
TRAININGPEAKS_RETRY_ATTEMPTS=3

# Retry delay
TRAININGPEAKS_RETRY_DELAY=1000
